{
  "compilerOptions": {
    "alwaysStrict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist/typings",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "noEmitOnError": true,
    "moduleResolution": "node"
  },
  "types": [
    "node"
  ],
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
